<html lang="en" data-bs-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{site_title}}</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      html, body { height: 100%; margin: 0; overflow: hidden; } header, footer {
      position: fixed; width: 100%; z-index: 1030; } header { top: 0; } footer {
      bottom: 0; } main { margin-top: 80px; margin-bottom: 40px; overflow-y:
      auto; height: calc(100% - 120px); padding: 1rem; } .banner { display:
      flex; align-items: center; background-color: var(--bs-dark); color: white;
      padding: 1rem; } .vertical-nav { display: flex; flex-direction: column;
      margin-right: 1rem; } .site-title { flex-grow: 1; text-align: center; }
      .auth-block { display: flex; flex-direction: column; align-items:
      flex-end; gap: 0.5rem; } .logo { height: 60px; width: auto; }
      .theme-toggle-btn { background: none; border: 1px solid white; color:
      white; border-radius: 0.25rem; padding: 0.25rem 0.5rem; font-size:
      0.875rem; }
    </style>
  </head>

  <body>
    <!-- Header/Banner -->
    <header class="banner">
      <!-- Vertical Navbar -->
      <nav class="vertical-nav">
        <a href="/" class="btn btn-outline-light btn-sm mb-1">Home</a>
        <a href="/about" class="btn btn-outline-light btn-sm mb-1">About</a>
        <a href="/contact" class="btn btn-outline-light btn-sm mb-1">Contact</a>
        <a href="/support" class="btn btn-outline-light btn-sm">Support</a>
      </nav>

      <!-- Logo -->
      <img src="/img/logo.svg" alt="Site Logo" class="logo me-3" />

      <!-- Site Title & Slogan -->
      <div class="site-title">
        <h1 class="mb-0">{{site_title}}</h1>
        <h2 class="fs-5 text-muted">{{site_slogan}}</h2>
      </div>

      <!-- Login/Register/Theme -->
      <div class="auth-block ms-3">
        <a href="/login" class="btn btn-outline-light btn-sm">Login</a>
        <a href="/register" class="btn btn-outline-light btn-sm">Register</a>
        <button
          id="theme-toggle"
          class="theme-toggle-btn"
          type="button"
          aria-label="Toggle dark or light theme"
          aria-pressed="true"
        >
          🌙 Dark
        </button>
      </div>
    </header>

    <!-- Main Content -->
    <main>
      <div class="container-fluid">
        {{{body}}}
        <div style="height: 2000px"></div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light text-center py-2">
      &copy;
      {{site_copyright}}
      <span id="year"></span>
      Owner:
      {{site_owner}}
      | Author:
      {{site_author}}
    </footer>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>

    <!-- Dynamic Year -->
    <script>
      document.getElementById("year").textContent = new Date().getFullYear();
    </script>

    <!-- Accessible Dark/Light Mode Toggle -->
    <script>
      const toggleButton = document.getElementById("theme-toggle"); const html =
      document.documentElement; function updateThemeToggle() { const
      currentTheme = html.getAttribute("data-bs-theme"); const isDark =
      currentTheme === "dark"; toggleButton.textContent = isDark ? "☀️ Light" :
      "🌙 Dark"; toggleButton.setAttribute("aria-pressed", String(isDark)); }
      toggleButton.addEventListener("click", () => { const currentTheme =
      html.getAttribute("data-bs-theme"); const newTheme = currentTheme ===
      "dark" ? "light" : "dark"; html.setAttribute("data-bs-theme", newTheme);
      updateThemeToggle(); }); updateThemeToggle(); // Set initial state
    </script>
  </body>
</html>